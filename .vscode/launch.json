    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rup'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rup",
                    "--package=rup"
                ],
                "filter": {
                    "name": "rup",
                    "kind": "bin"
                }
            },
            "args": ["-r", "/Users", "-p", "1234"],
            "cwd": "${workspaceFolder}"
        }
    ]
}